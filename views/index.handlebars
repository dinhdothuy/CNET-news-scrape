<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
      <h1>Tech News</h1>
      <p>The latest from CNET</p>
      <a class="btn scrape-new">Get new articles</a>
  </div>
</div>

<div class="container article-container">
  <h3>THE LATEST ARTICLES</h3>
  {{#each articles}}
    <div class="card bg-light mb-3">
      <div class="card-body">
        {{!-- <img src="{{image}}" style="height: 30px; width: 30px"> --}}
        <h4 class="card-title">{{headline}}</h4>
        <p class="card-text">
          {{intro}}...
          <span><a href="{{link}}" class="card-link" target="_blank">Read full article on CNET</a></span>
        </p>
        <a data-articleId="{{_id}}" class="btn btn-primary save-btn">Save article</a>
      </div>
    </div>
  {{/each}}
</div>